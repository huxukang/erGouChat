.chating {
  height: 100%;
  padding: 0 30rpx;
}
.chating .chat-cell {
  margin-bottom: 30rpx;
}
.chating .chat-cell .img {
  width: 70rpx;
  height: 70rpx;
}
.chating .chat-cell .other {
  text-align: left;
  display: flex;
}
.chating .chat-cell .other .text {
  padding: 0 25rpx;
  width: 500rpx;
}
.chating .chat-cell .other .text .text-cell {
  background-color: #fff;
  display: inline-block;
  padding: 15rpx 20rpx;
  border-radius: 8rpx;
  word-break: break-all;
  word-wrap: break-word;
}
.chating .chat-cell .other .text .text-cell .cell-zui {
  border-right: 14rpx solid #fff;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
  left: -15rpx;
  top: 30rpx;
}
.chating .chat-cell .text-cell {
  position: relative;
}
.chating .chat-cell .text-cell .cell-zui {
  position: absolute;
}
.chating .chat-cell .my {
  display: flex;
  padding-left: 80rpx;
}
.chating .chat-cell .my .text {
  padding: 0 25rpx;
  text-align: right;
  width: 500rpx;
}
.chating .chat-cell .my .text .text-cell {
  background-color: #95EC69;
  display: inline-block;
  padding: 15rpx 20rpx;
  text-align: left;
  border-radius: 8rpx;
  word-break: break-all;
  word-wrap: break-word;
}
.chating .chat-cell .my .text .text-cell .cell-zui {
  border-left: 14rpx solid #95EC69;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
  right: -15rpx;
  top: 25rpx;
}

