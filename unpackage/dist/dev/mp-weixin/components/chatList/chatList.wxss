.chat {
  background-color: #fff;
  height: 100%;
}
.chat .cell {
  min-height: 120rpx;
  display: flex;
}
.chat .cell .cell_image {
  padding: 20rpx 10rpx 20rpx 30rpx;
  width: 110rpx;
  overflow: hidden;
}
.chat .cell .cell_image .c_cell_header {
  height: 90rpx;
  width: 90rpx;
}
.chat .cell .cell_content {
  border-bottom: 0.5px solid #eaeaea;
  flex: 1;
  padding: 10rpx 10rpx 10rpx 0;
}
.chat .cell .cell_content .main {
  display: inline-block;
  width: 400rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 34rpx;
  font-weight: 600;
  color: #000;
}
.chat .cell .cell_content .main .name {
  margin-top: 10rpx;
}
.chat .cell .cell_content .main .message {
  color: #bcbcbc;
  font-size: 24rpx;
  margin-top: 5rpx;
  font-weight: 500;
}
.chat .cell .cell_content .time {
  float: right;
  color: #bcbcbc;
  font-size: 22rpx;
}

